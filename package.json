  "bugs": {
    "url": "https://github.com/Haibu-Project/haibu-backend/issues"
  },
  "homepage": "https://github.com/Haibu-Project/haibu-backend#readme",
  "dependencies": {
    "@prisma/client": "^6.4.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
